<div class="container">
  <div class="row" >
<div class="w3-top">
	<div class="w3-col m6 w3-container paperplane">
		<div class="w3-col m5 w3-container" style="margin: auto">
		
<div class="formulare">
<h2>Connexion</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, input_html: { class: "w3-input w3-border" } %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Me Connecter", class: "w3-button w3-black w3-right w3-section" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
		
